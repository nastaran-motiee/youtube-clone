{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true, // Allow JavaScript files
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // Include JavaScript files
    "**/*.jsx", // Include JSX files if needed
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}